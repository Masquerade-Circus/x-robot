{
  "name": "x-robot",
  "version": "0.3.0",
  "description": "A finite state machine library for nodejs and the web.",
  "source": "lib/index.ts",
  "main": "dist/index.min.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.min.js",
  "browser": "dist/index.min.js",
  "types": "dist/**/*.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./generate": {
      "import": "./dist/generate/index.mjs",
      "require": "./dist/generate/index.js"
    },
    "./serialize": {
      "import": "./dist/serialize/index.mjs",
      "require": "./dist/serialize/index.js"
    },
    "./validate": {
      "import": "./dist/validate/index.mjs",
      "require": "./dist/validate/index.js"
    },
    "./visualize": {
      "import": "./dist/visualize/index.mjs",
      "require": "./dist/visualize/index.js"
    },
    "./utils": {
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Masquerade-Circus/x-robot.git"
  },
  "author": "Masquerade-Circus <christian@masquerade-circus.net>",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "test": "mocha --recursive --no-timeouts --exit --require ts-node/register --enable-source-maps tests/**/*.test.ts",
    "test-cjs": "mocha --recursive --no-timeouts --exit --enable-source-maps tests/**/*.test.js",
    "test-mjs": "mocha --recursive --no-timeouts --exit --enable-source-maps tests/**/*.test.mjs",
    "test-min": "mocha --recursive --no-timeouts --exit --enable-source-maps tests/**/*.test.min.js",
    "test-all": "npm run test && npm run test-cjs && npm run test-mjs && npm run test-min",
    "dev:test": "nodemon -e ts,js -w ./tests -w ./lib --exec 'npm run test'",
    "bench": "buffalo-test --require=ts-node/register ./bench/**/*.ts",
    "dev:bench": "nodemon -e ts,js -w ./bench -w ./lib --exec 'npm run bench'",
    "build": "node build.js",
    "remark": "remark . -o",
    "commit": "git add . && git-cz",
    "release": "release-it --verbose",
    "release-test": "release-it --dry-run --verbose",
    "docs": "typedoc",
    "docs:build": "vuepress build docs",
    "docs:clean-dev": "vuepress dev docs --clean-cache",
    "docs:dev": "vuepress dev docs"
  },
  "files": [
    "lib",
    "dist",
    "types",
    "vendor"
  ],
  "keywords": [
    "finite state machine",
    "fsm",
    "state machine",
    "state",
    "machine",
    "functional",
    "functional programming",
    "frozen state",
    "pure ui",
    "user interface",
    "statechart",
    "finite automata",
    "immutable"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@vuepress/client": "^2.0.0-beta.49",
    "@vuepress/plugin-register-components": "^2.0.0-beta.49",
    "@vuepress/plugin-search": "^2.0.0-beta.49",
    "buffalo-test": "^2.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.14.47",
    "expect": "^28.1.1",
    "gzip-size": "^7.0.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.13",
    "release-it": "^15.1.1",
    "remark-cli": "^11.0.0",
    "robot3": "^0.3.1",
    "terser": "^5.9.0",
    "ts-node": "^10.8.2",
    "tsc": "^2.0.3",
    "tsc-prog": "^2.2.1",
    "typedoc": "^0.23.2",
    "typedoc-plugin-markdown": "^3.13.1",
    "typedoc-plugin-mdn-links": "^2.0.0",
    "typedoc-plugin-merge-modules": "^4.0.0",
    "typedoc-plugin-remove-references": "^0.0.6",
    "typescript": "^4.7.4",
    "vue": "^3.2.36",
    "vuepress": "^2.0.0-beta.49",
    "vuepress-theme-hope": "^2.0.0-beta.86",
    "xstate": "^4.26.1"
  },
  "overrides": {
    "minimist": "^1.2.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "feature",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "revert",
              "section": "Reverts"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styles"
            },
            {
              "type": "chore",
              "section": "Miscellaneous Chores"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring"
            },
            {
              "type": "test",
              "section": "Tests"
            },
            {
              "type": "build",
              "section": "Build System"
            },
            {
              "type": "ci",
              "section": "Continuous Integration"
            }
          ]
        }
      }
    },
    "git": {
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "after:@release-it/conventional-changelog": [
        "npm run remark",
        "npm run docs",
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "vuepress-theme-hope": "^2.0.0-beta.86"
  }
}
